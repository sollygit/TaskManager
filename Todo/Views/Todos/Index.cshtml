@model TodoTagViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Todo List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Todos" asp-action="Index" method="get">
    <div class="input-group">
        <span class="input-group-addon">Tag</span>
        <span class="input-group-btn" style="width:0;">
            <select name="tag" asp-for="TodoTag" asp-items="Model.tags" class="form-control">
                <option value="">- All -</option>
            </select>
        </span>
        <input type="text" name="searchString" placeholder="Search items" class="form-control" style="margin-left:10px;" />
        <span class="input-group-btn" style="width:0;">
            <input type="submit" value="Search" class="btn btn-default"/>
        </span>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.todos[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.todos[0].Tag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.todos[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.todos[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.todos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tag)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <text> | </text>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <text> | </text>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
